{
  "name": "jotai-molecules",
  "description": "A tiny, fast, dependency-free 1.18kb library for creating jotai atoms in a way that lets you lift state up, or push state down.",
  "version": "1.2.0",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "author": "ReferralSaaSquatch.com, Inc.",
  "homepage": "https://bunshi.org",
  "repository": "https://github.com/saasquatch/bunshi",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "vitest --watch",
    "build": "tsup",
    "test": "vitest run",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {},
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "limit": "2 KB"
    },
    {
      "path": "dist/index.js",
      "limit": "2 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@size-limit/preset-small-lib": "^9.0.0",
    "@types/react": "^16.0.0",
    "@types/react-dom": "^16.0.0",
    "babel-loader": "^8.2.4",
    "husky": "^7.0.4",
    "jotai": ">=1",
    "npm-run-all": "^4.1.5",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-hooks-testing-library": "^0.6.0",
    "react-is": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "size-limit": "^7.0.8",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.5"
  },
  "dependencies": {
    "bunshi": "^2.0.1"
  }
}
